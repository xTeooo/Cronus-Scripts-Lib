
int         SAWRX                                                                 = PS4_RX;
int SAWRY = PS4_RY;

int SawRecoil = 19;
int d;
main{  
combo_run        (                                                                                                                          Saw1        )                                                          combo_run        (                                                                                                                          Saw2        )                                                          
combo_run        (                                                                                                                          saw3        )                                                           if        (                                                                                                                          get_val        (                                                                                                                          PS4_L2        )                                                          &&get_val        (                                                                                                                          PS4_R2        )                                                                  )                                                          combo_run        (                                                                                                                          SawAntirecoil        )                                                          if        (                                                                                                                          abs        (                                                                                                                          get_val        (                                                                                                                          SAWRY        )                                                                  )                                                           > SawRecoil        )                                                          combo_stop        (                                                                                                                          SawAntirecoil        )                                                           
