	wait(249);
	Set(LxButton, 0);
	wait(10);
	Set(MeleeButton, 100);
	wait(100);
}
combo FastPickUp{
	Set(CrouchButton, 100);
	wait(100);
	Set(CrouchButton, 0); 
	wait(200);
	Set(FireButton, 100); 
	wait(5);
	Set(FireButton, 0); 
	wait(5);
