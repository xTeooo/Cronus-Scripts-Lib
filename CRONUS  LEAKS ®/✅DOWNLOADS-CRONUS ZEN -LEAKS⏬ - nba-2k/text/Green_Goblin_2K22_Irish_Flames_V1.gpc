int JumperTime = 518;		
int MovingTime = 720;

int Jumper;
int Moving;

init{

	JumperTime  = get_pvar(SPVAR_1, 300, 1000, JumperTime);
	MovingTime = get_pvar(SPVAR_2, 300, 1000, MovingTime);
	
}
main {
	
	set_val(TRACE_1,JumperTime);
	set_val(TRACE_2,MovingTime);
	
	if(get_val(XB1_X)){
		if(event_press(XB1_RIGHT)){
			JumperTime += 1; 
			combo_run(rumble);
		}
		if(event_press(XB1_LEFT)){
			JumperTime -= 1; 
			combo_run(rumble);
		}
		if(event_press(XB1_UP)){
			JumperTime += 5; 
			combo_run(rumble);
		}
		if(event_press(XB1_DOWN)){
			JumperTime -= 5; 
			combo_run(rumble);
		}
	}
	
	if(get_val(XB1_RT)){
		if(event_press(XB1_RIGHT)){
			MovingTime += 1; 
			combo_run(rumble);
		}
		if(event_press(XB1_LEFT)){
			MovingTime -= 1; 
			combo_run(rumble);
		}
		if(event_press(XB1_UP)){
			MovingTime += 5; 
			combo_run(rumble);
		}
		if(event_press(XB1_DOWN)){
			MovingTime -= 5; 
			combo_run(rumble);
		}
	}
	
	if(get_val(XB1_MENU)){
		if(event_press(XB1_UP)){
			MovingTime += 150;
			JumperTime += 150;
			combo_run(rumble);
		}
		if(event_press(XB1_DOWN)){
			MovingTime -= 150;
			JumperTime -= 150;
			combo_run(rumble);
		}
		
	}
    
    if((get_val(PS4_LX))<0 && event_press(PS4_L3))
	    			combo_run(QuickStopLeftHand);
	if((get_val(PS4_LX))>0 && event_press(PS4_L3))
	    			combo_run(QuickStopRightHand);
    
	 	
	 	 
	
	if(get_ival(XB1_LT) && get_ival(XB1_RT) && event_press(XB1_MENU)){
		set_pvar(SPVAR_1,JumperTime);
		set_pvar(SPVAR_2,MovingTime);
		combo_run(rumble);
	}
		
			
		if (event_press(XB1_X)) 
		{ Jumper = TRUE;
		Moving = FALSE;  
		}

	if(get_val(XB1_RT))
			
		if (event_press(XB1_X)) 
		{ Jumper = FALSE;
		Moving = TRUE;  
		}
    
    if(get_ival(XB1_X)){
    	set_val(XB1_X,0);
	    if(Jumper) {
	    	combo_run(Green1);
    	}
	    if(Moving) {
	    	combo_run(Green2);
    	}
    }

} 

combo rumble{
    wait(100);
    set_rumble(RUMBLE_A,80);
    wait(100);
    reset_rumble();
}

combo Green1{
	set_val(XB1_X,100);
	wait(JumperTime);
	set_val(XB1_X,0);
	wait(20);
}
combo Green2{
	set_val(XB1_X,100);
	wait(MovingTime);
	set_val(XB1_X,0);
	wait(20);
}
combo QuickStopLeftHand{ 
	set_val(PS4_RX, 100);
	wait(100);
}
combo QuickStopRightHand{ 
	set_val(PS4_RX, -100);
	wait(100);
}

combo Takeover
{
	set_val(PS4_R3, 100);
	wait(100);
}	
 