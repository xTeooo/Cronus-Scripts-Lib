define gather_wait_time = 3000;



int toggle_afk;



init {

 cls_oled(0);

}



main {


 if(get_ival(XB1_LT)) {
  if(event_press(XB1_A))
   toggle_afk = !toggle_afk;
  set_val(XB1_DOWN,0);
 }

 if(toggle_afk) {
  combo_run(maxcmb);
  set_val(XB1_RY,100);
  if(isqrt(pow(abs(get_ival(XB1_RX)),2) + pow(abs(get_ival(XB1_RY)),2)) < 18)
   set_val(XB1_RX,0);
  if(isqrt(pow(abs(get_ival(XB1_LX)),2) + pow(abs(get_ival(XB1_LY)),2)) < 18) {
   set_val(XB1_LX,0);
   set_val(XB1_LY,0);
  }
  block_rumble();
  set_rgb(0,10,0);
 }
 else {
  combo_stop(maxcmb);
  set_rgb(10,0,0);
 }


}
