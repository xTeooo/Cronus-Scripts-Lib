combo RESTART {
	if(display_on) 
		combo_run(DISPLAY_DEAD);
	wait(get_rtime());
		
	wait(4000); // wait respawn
	set_val(PS4_SQUARE, 100); // press respawn
	wait(150);
	
	if(display_on) 
		combo_run(DISPLAY_RESTART);
	
	killed = 0;
		
	wait(get_rtime());
		
	wait(8000); // loading + elevator
	display_main = TRUE;
	wait(get_rtime());
	wait(2000);
	
	HW_loop = 0;
	loop_quantity = 0;
}

combo WIPE {
