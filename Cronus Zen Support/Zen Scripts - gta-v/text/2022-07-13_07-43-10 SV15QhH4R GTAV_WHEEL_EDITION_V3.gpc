function print_state() {
  cls_oled(OLED_BLACK);
  print(center_text(string_len(State_Strings[walkaround_toggle]), OLED_FONT_SMALL_WIDTH), 52, OLED_FONT_SMALL, OLED_WHITE, State_Strings[walkaround_toggle]);
}

function string_len(f_index) {
  string_length = 0;
  do {
    string_length ++;
    f_index ++;
  }
  while(duint8(f_index));
  return string_length;
}

function center_text(f_chars, f_font) {
  return (OLED_WIDTH / 2) - ((f_chars * f_font) / 2);
}

	

function Saver () {
    
    if (Saver) { 

		TimeS += get_rtime();

    for(ii = 0; ii <= 10; ii++) { 
