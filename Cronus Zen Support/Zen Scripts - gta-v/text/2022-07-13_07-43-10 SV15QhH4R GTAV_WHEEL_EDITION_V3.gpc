    }

    for(jj = 0; jj <= 10; jj++) { 
        putc_oled(1,Saver_Scroll[1][jj]);
        puts_oled(LineA + 100 + jj * 7, 15, 0,1,1);
    }
    
    for(ll = 0; ll <= 10; ll++) { 
        putc_oled(1,Saver_Scroll[2][ll]);
        puts_oled(LineB + -50 + ll * 7, 28, 0,1,1);
    }
    
    for(oo = 0; oo <= 10; oo++) { 
        putc_oled(1,Saver_Scroll[3][oo]);
        puts_oled(LineC + 10 + oo * 7, 41, 0,1,1);
    }
    
   
    
        if (TimeS == 50) {
            LineA +=2;
            LineB -=2;
            LineC +=1;
            TimeS = 0;
        }
    }
}



