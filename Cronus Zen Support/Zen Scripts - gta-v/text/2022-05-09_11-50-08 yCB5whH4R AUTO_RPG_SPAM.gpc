// GPC Online Library
// gta_5_rocket_spam.gpc


//----------------------- RPG SPAM ON/OFF - "LB + B" (ON BY DEFAULT)
/*-----------------------------------AIM WITH RPG NOT HOMING------*/


define LYA = PS4_LY;


int RPG = TRUE;


/*------------------------------------------------*/


main {

  swap(PS4_L3, PS4_L2);
  swap(PS4_R3, PS4_R2);

  if(get_val(PS4_L2) && event_press(PS4_CIRCLE))
    RPG = !RPG;

  if(get_val(PS4_R2) && RPG)
    combo_run(RPG);

}


combo RPG
{
  // Wait for shot
  wait(210);
  // Swap to Sticky Bomb
  set_val(PS4_L1, 100);
  wait(180);
  set_val(PS4_L1, 100);
  set_val(PS4_RX, -85);
  set_val(PS4_RY, -85);
  wait(45);
  set_val(PS4_RX, 0);
  set_val(PS4_RY, 0);
  set_val(PS4_L1, 0);
  wait(50);
  // Swap back to RPG
  set_val(PS4_L1, 100);
  wait(180);
  set_val(PS4_L1, 100);
  set_val(PS4_RX, -100);
  wait(45);
  set_val(PS4_L1, 0);
  wait(100);
}