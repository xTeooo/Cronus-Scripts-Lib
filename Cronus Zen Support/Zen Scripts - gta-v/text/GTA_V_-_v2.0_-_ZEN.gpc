function antirecoil() {

	if(!toggle_aimassist[profile_idx])
	{
		set_val(PS4_RY, clamp(SmartSens(antirecoil_vertical[profile_idx], PS4_RY), -100, 100));   
		set_val(PS4_RX, clamp(SmartSens(antirecoil_horizontal[profile_idx], PS4_RX), -100, 100));
	}
	else if(toggle_aimassist[profile_idx])
	{
		combo_run(STICKY);
	}
}

