|                                                 FUNCTION SECTION                                                      |
◌ — ◌ — ◌ — ◌ — ◌ — ◌ — ◌ — ◌ — ◌ — ◌ — ◌ — ◌ — ◌ — ◌ — ◌ — ◌ — ◌ — ◌ — ◌ — ◌ — ◌ — ◌ — ◌ — ◌ — ◌ — ◌ — ◌ — ◌ — ◌ — ◌ —*/
int SmartVal;	

function SmartSens(f_val, f_axis) { 

	SmartVal = ( (f_val * ( 100 - abs( get_val(f_axis) ) ) ) / 100); 
    return clamp(get_val(f_axis) + SmartVal, -100, 100);
}

