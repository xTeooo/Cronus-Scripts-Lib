int a = 1000;
int b = 10000;
int c = 10000;
int d = 30000;

int rndS;
int rndL;
int rndVL;
int rndLS;

main {
rndS = random(a,b);
rndL = random(b,c);
rndVL = random(c,d);
rndLS = rndL+rndS
if(event_press(XB1_RS)) {
        combo_run(maxcmb);
    }
if(event_press(XB1_LS)) {
        combo_stop(maxcmb);
    }}
combo maxcmb {
	set_val(XB1_A, 100);
	wait(rndS);
	set_val(XB1_A, 0);
	wait(rndVL);
	//1st action
	set_val(XB1_LB, 100);
	wait(rndS);
	set_val(XB1_X, 100);
	wait(rndS);
	set_val(XB1_X, 0);
	wait(rndS);
	set_val(XB1_LB, 0);
	wait(rndL);
	set_val(XB1_A, 100);
	wait(rndS);
	set_val(XB1_A, 0);
	wait(rndLS);
	//2nd action
	set_val(XB1_LB, 100);
	wait(rndS);
	set_val(XB1_Y, 100);
	wait(rndS);
	set_val(XB1_Y, 0);
	wait(rndS);
	set_val(XB1_LB, 0);
	wait(rndS);
	set_val(XB1_A, 100);
	wait(rndS);
	set_val(XB1_A, 0);
	//match end
	wait(rndVL);
	//continue
	set_val(XB1_A, 100);
	wait(rndS);
	set_val(XB1_A, 0);
	//Explore Menu
	wait(rndLS);
	set_val(XB1_A, 100);
	wait(rndS);
	set_val(XB1_A, 0);
	wait(rndS);
	set_val(XB1_A, 100);
	wait(rndS);
	set_val(XB1_A, 0);
	wait(rndS);
	set_val(XB1_DOWN, 100);
	wait(rndS);
	set_val(XB1_DOWN, 0);
	wait(rndS);
	set_val(XB1_A, 100);
	wait(rndS);
	set_val(XB1_A, 0);
	wait(rndL);
	set_val(XB1_A, 100);
	wait(rndS);
	set_val(XB1_A, 0);
	wait(rndS);
	set_val(XB1_A, 100);
	wait(rndS);
	set_val(XB1_A, 0);
	wait(rndS)
	}