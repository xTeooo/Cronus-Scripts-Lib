// Capcom Arcade Reload Save
// CapcomV2.gpc



int toggle;



main {


    // Activate
    if (event_press(XB1_LB))
        toggle = TRUE;

    // Deactivate
    if (event_press(XB1_RT))
        toggle = FALSE;

    if (toggle)
        combo_run(Keys_Slot_1);
    else combo_stop(Keys_Slot_1);


}



combo Keys_Slot_1 {
    wait(100);
    set_val(XB1_A,100);
    wait(40);
    wait(1000);
    set_val(XB1_A,100);
    wait(40);
    wait(1000);
    set_val(XB1_UP,100);
    wait(40);
    wait(1000);
    set_val(XB1_A,100);
    wait(40);
    wait(5000);
    set_val(XB1_A,100);
    wait(40);
    wait(4000);
    set_val(XB1_MENU,100);
    wait(40);
    wait(1000);
    set_val(XB1_DOWN,100);
    wait(40);
    wait(1000);
}