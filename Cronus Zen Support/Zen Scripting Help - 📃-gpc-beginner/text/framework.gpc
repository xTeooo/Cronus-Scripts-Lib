int combo_1_toggle;
int combo_2_toggle;
int combo_3_toggle;
int combo_4_toggle;
int Combo1Loop
int Combo2Loop
int Combo3Loop
int Combo4Loop

main {
	set_rgb(93,194,30);
  	if(get_val(XB1_RIGHT)) {
  		reset_rumble();
  		block(XB1_A, 500);
		block(XB1_B, 500);
		block(XB1_X, 500);
		block(XB1_Y, 500);
    	if(event_press(XB1_A)) {
      		combo_stop(Combo_1);
      		combo_1_toggle = !combo_1_toggle;
    }
    	if(event_press(XB1_B)) {
      		combo_stop(Combo_2);
      		combo_2_toggle = !combo_2_toggle;
    }
    	if(event_press(XB1_X)) {
    		combo_stop(Combo_3);
      		combo_3_toggle = !combo_3_toggle;
    }
    	if(event_press(XB1_Y)) {
      		combo_stop(Combo_4);
      		combo_4_toggle = !combo_4_toggle;
    }
        if(event_press(XB1_RS)) {
			set_rumble(RUMBLE_B, 50);
			combo_1_toggle = 0;
			combo_2_toggle = 0;
			combo_3_toggle = 0;
			combo_4_toggle = 0;
    }
  }

  if(combo_1_toggle) {
  	set_rgb(0,255,0);
    combo_run(Combo_1);
	}
  if(combo_2_toggle) {
  	set_rgb(255,0,0);
    combo_run(Combo_2);
	}
  if(combo_3_toggle) {
  	set_rgb(0,0,255);
  	for (Combo3Loop = 0; Combo3Loop < 40; Combo3Loop++) {
    	combo_run(Combo_3);
    	}
	}
  if(combo_4_toggle) {
  	set_rgb(255,200,0);
    combo_run(Combo_4);
	}
}
