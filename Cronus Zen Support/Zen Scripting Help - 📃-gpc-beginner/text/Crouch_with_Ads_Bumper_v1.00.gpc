
// Thanks to TaylorDrift21 for the examples - Fadexz for the Combo \\
             
define Ads = XB1_LT;
define Fire = XB1_RT;
define Lethal = XB1_RB;
define Crouch = XB1_B;
int CrouchAB;
main {

   if(get_ival(Ads)){
       if(get_ival(Lethal)){
		   CrouchAB = TRUE;
	   }
	   set_val(Lethal,0);
   } 
   if(CrouchAB){ 
	   set_val(Fire,100);
	   combo_run(Crouch_Toggle);
   }
   if(event_release(Ads) || event_release(Lethal))
   {
	   CrouchAB = FALSE;
   }
}
combo Crouch_Toggle {
 set_val(XB1_B,100);
 wait(40);
}

