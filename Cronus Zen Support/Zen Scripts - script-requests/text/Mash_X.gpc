int MashXOn;



main {


  if(event_press(PS4_R3))
    MashXOn = !MashXOn;

  if(MashXOn) {
    set_hsb(119,100,75);
    combo_run(MashX);
  }
  else {
    set_hsb(1,100,75);
    combo_stop(MashX);
  }


}



combo MashX {
  set_val(PS4_CROSS,100);
  wait(40);
  set_val(PS4_CROSS,0);
  wait(40 - get_rtime());
  set_val(PS4_CROSS,0);
}