    if (b_dblclick) {                                 
        dblclick_msecs = dblclick_msecs + get_rtime();
        if ( dblclick_msecs > time_to_dblclick ) {    
            dblclick_count = 0;                       
            dblclick_msecs = 0;                       
            b_dblclick = FALSE;                       
        }                                             
    }                                                 
    if (event_release(button) && get_ptime(button) < 250) { 
        if (dblclick_count == 0) {                    
            b_dblclick = TRUE;                        
        } else if (dblclick_count == 1) {             
            dblclick_count = 0;                       
          return 1;                                   
        }                                              
        dblclick_count = dblclick_count + 1;          
    }                                                 
                                                     
    return 0;                                        
}           
