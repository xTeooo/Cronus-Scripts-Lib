init { 

    Accelerator = DrivingControls[0];
    BrakePedal  = DrivingControls[1];
	GearUp      = DrivingControls[2];
	GearDown    = DrivingControls[3];
	Clutch      = DrivingControls[4];
	HandBrake   = DrivingControls[5];
	
