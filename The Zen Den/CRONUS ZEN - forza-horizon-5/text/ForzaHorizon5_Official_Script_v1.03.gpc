} 
main { 
   
	if(RunRgb){
		combo_run(rgb);
	} 
	if(Intro){
		combo_run(intro);
	}
    if(AssistedBrakes) { 
    	BrakePressure = ABS[clamp(BrakePressure ++,0,sizeof(ABS))];
		if(get_rumble(RUMBLE_LT)){
			set_val(BrakePedal,BrakePressure);
			Display = TRUE;
		} 
		if(event_release(BrakePedal) || get_ival(Accelerator)){
			BrakePressure = 0;
			Display = TRUE;
		} 
	} 
	if(TractionControl){ 
		if(get_rumble(RUMBLE_RT) >= 0){ 
			if(get_ival(Accelerator) > AccelerationValue){ 
				AccelerationValue = Throttle[clamp(AccelerationValue ++,0,sizeof(Throttle))]; 
				Display = TRUE;
			}else{ 
				AccelerationValue = get_ival(Accelerator);		
			}
			set_val(Accelerator,AccelerationValue);
		} 
		if(event_release(Accelerator)){ 
			AccelerationValue = 0;
			Display = TRUE;
		} 
	}
	if(AutoClutch){ 
		if(event_press(GearUp)){ 
			GearIdx = clamp(GearIdx + 1,GearsMinMax[0][0],GearsMinMax[0][1]);
			Display = TRUE;
			combo_run(Clutch);
		}
		if(event_press(GearDown)){ 
			GearIdx = clamp(GearIdx - 1,GearsMinMax[0][0],GearsMinMax[0][1]);
			Display = TRUE;
			combo_run(Clutch);
		}
		if(event_press(GearDown) && !get_rumble(RUMBLE_A) && !get_rumble(RUMBLE_B)){
			GearIdx = 1;
		}
	}
	if(LaunchControl){ 
		if(event_press(PS4_R3)){
			combo_run(Launch);
			GearIdx = 1;
		} 
		if(ActivateThrottle){ 
		
			if(event_press(PS4_UP)){
				AccelerationRate = clamp(AccelerationRate + 1,35,60);
				Display = TRUE;
			} 
			if(event_press(PS4_DOWN)){
				AccelerationRate = clamp(AccelerationRate - 1,35,60);
				Display = TRUE;
			}
			Display = TRUE;
			set_val(Accelerator,AccelerationRate/2);
			set_val(HandBrake,100);
			set_val(Clutch,100);
			set_val(PS4_DOWN,0);
			set_val(PS4_UP,0);
		} 
		if(get_ival(Accelerator)){
			ActivateThrottle = FALSE;
			combo_run(Delay); 
		}
	} 
	if(!TractionControl){ 
		if(get_ival(Accelerator)){
    		Display = TRUE;
    	} 
    	if(event_release(Accelerator)){
    		Display = TRUE;
    	} 
    } 
	if(SemiAutoShifting){ 
		AutoShifting = get_rumble(RUMBLE_B);
		if(AutoShifting >= 5 && !get_ival(BrakePedal) && get_rumble(RUMBLE_A) >= 1 && !event_press(GearDown)){ 
			set_val(GearUp,100); 
		} 
		if(get_rumble(RUMBLE_LT) >= 10){ 
			set_val(GearDown,100);
		} 
	} 
	if(get_rumble(RUMBLE_A) >= 4 && get_rumble(RUMBLE_RT) >= 4 && get_rumble(RUMBLE_B) >= 5){ 
		SemiAutoShifting = FALSE;
	} 
	if(event_press(Clutch) && get_brtime(Clutch) <= 200){
		SemiAutoShifting = TRUE;
	} 
	if(Display){ 
		cls_oled(0);
		if(GearIdx <= 0){ 
			String(Misc[1],Medium,24,0); 
		}
		else
		{
			number_to_string(GearIdx,find_digits(GearIdx));
		} 
		
			String(Misc[0],Small,2,0);
		
			
			rect_oled(14, 10,((AccelerationValue * 100)/100),12, 1, 1);
			rect_oled(14, 10,((get_ival(Accelerator) * 100)/100),12, 1, 1);
	 		rect_oled(14, 10,100, 12, 0, 1);
		
		if(ActivateThrottle) { 
			printf(15,28,OLED_FONT_SMALL,OLED_WHITE,Misc[6]);
			String(Misc[7],Medium,24,0); 
			rect_oled(14, 10,((AccelerationRate * 100)/100),12, 1, 1);
		} 
		if(SemiAutoShifting){
			printf(34,55,OLED_FONT_SMALL,OLED_WHITE,Misc[2]);
		} 
		if(AssistedBrakes && get_rumble(RUMBLE_LT)){
			printf(80,55,OLED_FONT_SMALL,OLED_WHITE,Misc[4]);
		}
		if(TractionControl && get_rumble(RUMBLE_RT)){ 
			printf(34,44,OLED_FONT_SMALL,OLED_WHITE,Misc[3]);
		} 
		if(AutoClutch){ 
			printf(80,44,OLED_FONT_SMALL,OLED_WHITE,Misc[5]);
		} 
		Display = FALSE;
	}
	
		
	set_val(TRACE_1,SemiAutoShifting);
	set_val(TRACE_2,TractionControl);
    set_val(TRACE_3,ActivateThrottle);
    set_val(TRACE_4,GearIdx);
    
} 
combo Clutch {
set_val(Accelerator,0);
wait(TIME[0]);
set_val(Clutch,100) 
set_val(Accelerator,0);
wait(TIME[1]);
}
combo Launch { 
set_val(GearUp,100);
wait(TIME[1]); 
set_val(GearDown,100);
wait(TIME[1]);
TractionControl = FALSE;
ActivateThrottle = TRUE;
} 
