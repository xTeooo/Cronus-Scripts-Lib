// Don't At Me's Zen Polar Aim Assist {AKA[ME.]}
define RX = XB1_RX;
define RY = XB1_RY;
define Ads = XB1_LT;

int SPEED;

define POLAR_RADIUS  = 15;
define POLAR_ANGLE   = 15;
define POLAR_RELEASE = 15;

main {

	if (get_ival(Ads) && abs(get_ival(RX)) <= POLAR_RELEASE && abs(get_ival(RY)) <= POLAR_RELEASE) {
    	set_polar(POLAR_RS,SPEED = (SPEED + POLAR_ANGLE) % 360,POLAR_RADIUS * 328);
	}
}