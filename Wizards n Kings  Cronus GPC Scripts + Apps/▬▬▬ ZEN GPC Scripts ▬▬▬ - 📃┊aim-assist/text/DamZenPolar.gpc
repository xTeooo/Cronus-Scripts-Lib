// Zen Polar Aim Assist Made by Do Not At Me [aka ME.]
// Either Ads or Fire Activates Aim Assist

define Ads  = PS4_L2;
define Fire = PS4_R2;
define AimX = PS4_RX;
define AimY = PS4_RY;
define PS   = POLAR_RS;

int Radius = 13;  // Power
int Angle  =  9;  // Speed

int R = 15; // Release/Cut-out value
int Speed;

main {

if (get_ival(Ads) || get_ival(Fire)) {
  	
  if (abs(get_ival(AimX)) <= R && abs(get_ival(AimY)) <= R) {
    
    set_polar(PS,Speed = (Speed + Angle) % 360,Radius * 328);
		
    }
  }
}