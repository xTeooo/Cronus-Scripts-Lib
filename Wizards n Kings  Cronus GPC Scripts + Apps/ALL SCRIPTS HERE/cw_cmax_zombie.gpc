define hold_time   = 30000;
int onoff;
int onoff1;
 
main {
 
    if(event_press(XB1_UP)) // Start Loop C4 + Field Upgrade
        onoff = !onoff;
    if(onoff)
        combo_run(C4PLUS);
    if(event_press(XB1_RIGHT)) // Start Loop C4
        onoff1 = !onoff1;
    if(onoff1)
        combo_run(C4);
}

