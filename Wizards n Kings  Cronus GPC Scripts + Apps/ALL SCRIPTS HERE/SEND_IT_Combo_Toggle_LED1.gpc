int RUN,RUN2;		//Don't Change

main {
    if (event_press(PS4_CROSS))  // Single Press Toggles On-Off
            RUN = !RUN;
           
        if (RUN)  {
                set_rgb(0,100,0);      			// Green LED Means On- Combo Running
            			combo_run(combo_1);
           } else {
             	combo_stop(combo_1);
        }
           
     if (Button2) {
     	if (event_press(PS4_SQUARE)) // Single Press Toggles On-Off
            RUN2 = !RUN2;
            
        	if (RUN2) {
                set_rgb(0, 0, 100);      		// Blue LED Means On- Combo Running
            			combo_run(combo_2);
           	} else {
             	combo_stop(combo_2);
        }
     }      
     
     if (RUN && (RUN2)) {
           	set_rgb(100, 0, 100);				// Purple LED Means On- Combo Running
           	
    	   } else if (!RUN && (!RUN2)) {
             	combo_run(LEDflash);			// Red LED Flash Means No Combos Running
     }
        
}
  
