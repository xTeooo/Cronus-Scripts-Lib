int comb_toggle;
int turbo_circle_toggle;



main {


  if(event_press(PS4_LEFT)) {
    comb_toggle = !comb_toggle;
    turbo_circle_toggle = FALSE;
  }

  if(event_press(PS4_RIGHT)) {
    turbo_circle_toggle = !turbo_circle_toggle;
    comb_toggle = FALSE;
  }

  if(comb_toggle)
    combo_run(Comb);
  else combo_stop(Comb);

  if(turbo_circle_toggle)
    combo_run(Turbo_CIRCLE);
  else combo_stop(Turbo_CIRCLE);


}



combo Comb {

  set_val(PS4_TRIANGLE, 100);
  wait(150);
  wait(1000);
  set_val(PS4_CIRCLE, 100);
  wait(100);
  wait(100);
  set_val(PS4_CIRCLE, 100);
  wait(100);
  wait(100);
  set_val(PS4_TRIANGLE, 100);
  wait(100);
  wait(100);
  set_val(PS4_CIRCLE, 100);
  wait(100);
  wait(100);
  set_val(PS4_CIRCLE, 100);
  wait(100);
  wait(100);

}



combo Turbo_CIRCLE {

  set_val(PS4_CIRCLE, 100);
  wait(40);
  set_val(PS4_CIRCLE, 0);
  wait(40);
  set_val(PS4_CIRCLE, 0);

}