// Fadexz Rapid Fire

define Fire = XB1_RT;   // In game fire button 
int rf_wait_time = 20;  // 1000/(20*2) = 25/sec

main {

	if (get_ival(Fire)) {
  		
  		combo_run(Rapid_Fire);
 	
 	} else { 
 
 		combo_stop(Rapid_Fire);
	}
}

combo Rapid_Fire {
 	
 	wait(rf_wait_time);
 	set_val(Fire,0);
 	wait(rf_wait_time - get_rtime());
 	set_val(Fire,0);
}