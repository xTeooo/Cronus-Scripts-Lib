// all you have to do to turn mod on and off is press RIGHT on DPad //
define hold_time   = 30000;
define Cancel = PS4_CROSS;
int press_Cancel;
int onoff;
 
main {
 
    if(event_press(PS4_RIGHT))
        onoff = !onoff;
 
    if(onoff)
        combo_run(LOOP);
 if(press_Cancel) set_val(Cancel, 100);
}

 
combo LOOP { 
 
  wait(800);
	  set_val(PS4_R2, 100);
	  wait(150);
	  set_val(PS4_R2, 0);
	  wait(600 );
	  set_val(PS4_SQUARE, 100);
	  wait(100);
	  set_val(PS4_SQUARE, 0);
	  wait(90);
	  set_val(PS4_SQUARE, 100);
	  wait(60);
	  set_val(PS4_SQUARE, 0);
	  wait(40);
	  set_val(PS4_SQUARE, 100);
	  wait(70);
	  set_val(PS4_SQUARE, 0);
	  wait(500);
	  set_val(PS4_R2, 100);
	  set_val(PS4_L2, 100);
	  wait(200);
	  set_val(PS4_R2, 0);
	  set_val(PS4_L2, 0);
	  wait(200);}	