int XPGlitch;

main {
	if(get_ival(PS4_L2))			// Hold The Aim Down Sights Button
	{
		if(event_press(PS4_RIGHT))	// Tap Right On The DPAD While Holding Aim Down Sights To Enable The Glitch
		{
			XPGlitch = !XPGlitch;
			combo_run(cVibrate);
			LEDBlink(XPGlitch);
		}
			set_val(PS4_RIGHT, 0);
	}

	if (XPGlitch)
		combo_run(FortniteXPFarmGlitch);
    else
		combo_stop(FortniteXPFarmGlitch);
}
 
combo FortniteXPFarmGlitch {
    wait(100);
    set_val(PS4_R2, 100);
    wait(600);
    set_val(PS4_SQUARE, 100);
    wait(500);
    set_val(PS4_SQUARE, 0);
    wait(500);
}

combo cVibrate {
	set_rumble(RUMBLE_A, 90);
	wait(230);
	reset_rumble();
}

combo FlashGreen {
	set_rgb(0, 255, 0);
	wait(100);
	set_rgb(0, 0, 0);
	wait(100);
	set_rgb(0, 255, 0);
	wait(100);
	set_rgb(0, 0, 0);
	wait(100);
	set_rgb(0, 255, 0);
	wait(2000);
	set_rgb(0, 0, 0);
}

combo FlashRed {
	set_rgb(255, 0, 0);
	wait(100);
	set_rgb(0, 0, 0);
	wait(100);
	set_rgb(255, 0, 0);
	wait(100);
	set_rgb(0, 0, 0);
	wait(100);
	set_rgb(255, 0, 0);
	wait(2000);
	set_rgb(0, 0, 0);
}

function LEDBlink(Toggle) {
    if(Toggle)
        combo_run(FlashGreen);
    else
        combo_run(FlashRed);
}